<Window x:Class="OGAOE7_HFT_2021221.WPFClient.DrinkCreateOrUpdateWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:OGAOE7_HFT_2021221.WPFClient"
        mc:Ignorable="d"
        Title="DrinkCreateOrUpdateWindow" Height="400" Width="300" ResizeMode="NoResize">
    <StackPanel x:Name="sp" Background="#F5F5F5">
        <Label Content="Name" Background="#4CAF50" Foreground="White" Padding="10" HorizontalContentAlignment="Center"/>
        <TextBox x:Name="tb_name" Padding="5"/>
        <Label Content="Price" Background="#4CAF50" Foreground="White" Padding="10" HorizontalContentAlignment="Center"/>
        <TextBox x:Name="tb_price" Padding="5"/>
        <CheckBox x:Name="cb_promotional" Content="Promotional" Padding="5" HorizontalContentAlignment="Center" HorizontalAlignment="Center" VerticalContentAlignment="Center"/>
        <Button x:Name="btn_send" Content="Send" Click="Send_Button_Click" Background="#4CAF50" Foreground="White" Padding="10" Margin="10 100 10 10" Width="200"/>
    </StackPanel>
</Window>

